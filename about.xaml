<Window x:Class="monitorinfo.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:monitorinfo"
        Title="关于" Height="305" Width="450" ResizeMode="NoResize">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="51*"/>
      <RowDefinition Height="89*"/>
    </Grid.RowDefinitions>
    <Image HorizontalAlignment="Left" Height="142" Margin="129,0,0,0" VerticalAlignment="Top" Width="192"
           Source="Resources/gaumt_hidpi.png" Grid.RowSpan="2" RenderTransformOrigin="0.278,0.557"/>
    <Label x:Name="LabelTitle" HorizontalAlignment="Left" Margin="49,50.6,0,0" Grid.Row="1"
           VerticalAlignment="Top"/>
    <Label x:Name="LabelAuthor" HorizontalAlignment="Left" Margin="49,70.6,0,0" Grid.Row="1"
           VerticalAlignment="Top" RenderTransformOrigin="0.358,-0.062"/>
    <Label x:Name="LabelVersion" Content="" HorizontalAlignment="Left" Margin="49,90.6,0,0" Grid.Row="1"
           VerticalAlignment="Top" RenderTransformOrigin="0.358,-0.062"/>
    <Label x:Name="LabelCopyRight" Content="" HorizontalAlignment="Left" Margin="49,110.6,0,0" Grid.Row="1"
           VerticalAlignment="Top" RenderTransformOrigin="0.358,-0.062"/>
    <Button Click="BtnOK_Click" x:Name="ButtonOK" Content="确定" HorizontalAlignment="Left"
            Margin="187.5,140.6,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
    <TextBlock MouseDown="TextBlockDescription_MouseDown" x:Name="TextBlockDescription" HorizontalAlignment="Left"
               Margin="185,95,0,0" Grid.Row="1" TextWrapping="Wrap" Text="详细信息" VerticalAlignment="Top"
               TextDecorations="UnderLine" Foreground="#FF0C7DF7"/>
  </Grid>
</Window>